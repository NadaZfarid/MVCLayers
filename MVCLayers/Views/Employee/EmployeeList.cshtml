@{
    int i = 1;
    Layout = "_Layout";
}

<h1> Employees : </h1>

@foreach (var employee in Model)
{
    <ul>
        <li>Fname: @employee.Fname</li>
        <li>Lname: @employee.LName</li>
        <li>Address: @employee.Address</li>
        <li>Gender: @employee.Gender</li>
        <li>BDate: @employee.BDate</li>
        <li>Salary: @employee.Salary</li>
        <li class="list-inline"><a asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.SSN" class="btn btn-primary">Edit</a></li>
        <li class ="list-inline"><a asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.SSN" class="btn btn-danger">Delete</a></li>
    </ul>
    <hr />
}


<a asp-action="Add" asp-controller="Employee" class="btn btn-secondary">Add Employee</a>


